server   {
    listen 80 default_server;
    server_name _;
    location / {
        try_files $uri $uri/ =404;
    }
    location /test
    {
        root /var/www/html;
        index index.html index.htm index.nginx-debian.html;
    }
}

server          {
        listen 80;

        server_name _;
        location / {
                try_files $uri $uri/ =404;
        }
        location /test
        {
            root /var/www/html;

            index index.html index.htm index.nginx-debian.html;
        }
}